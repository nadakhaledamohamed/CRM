@model CRM.ViewModel.BulkUploadViewModel

@{
    ViewData["Title"] = "Bulk Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-upload"></i>
                        Bulk Upload Persons
                    </h3>
                </div>
                <div class="card-body">

                    <!-- Alert Messages -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ValidationErrors"] != null)
                    {
                        var errors = TempData["ValidationErrors"] as List<string>;
                        if (errors != null && errors.Any())
                        {
                            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                <h5><i class="fas fa-exclamation-triangle"></i> Validation Errors:</h5>
                                <ul class="mb-0">
                                    @foreach (var error in errors.Take(10)) // Show first 10 errors
                                    {
                                        <li>@error</li>
                                    }
                                    @if (errors.Count > 10)
                                    {
                                        <li><em>... and @(errors.Count - 10) more errors</em></li>
                                    }
                                </ul>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }
                    }

                    <!-- Upload Instructions -->
                    <div class="row mb-4">
                        <div class="col-md-8">
                            <div class="alert alert-info">
                                <h5><i class="fas fa-info-circle"></i> Instructions:</h5>
                                <ol class="mb-0">
                                    <li>Download the Excel template using the "Download Template" button</li>
                                    <li>Fill in the required information in the template</li>
                                    <li>Save the file and upload it using the form below</li>
                                    <li>Supported formats: .xlsx, .xls</li>
                                </ol>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <h6><i class="fas fa-user"></i> Upload Information</h6>
                                    <p class="mb-1"><strong>Created By:</strong> @Model.CreatedByName</p>
                                    <p class="mb-1"><strong>Max Interests:</strong> @Model.MaxNumberOfInterests</p>
                                    @* <p class="mb-0"><strong>Academic Setting ID:</strong> @Model.CurrentAcademicSettingId</p> *@
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons Row -->
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <a href="@Url.Action("DownloadTemplate", "Persons")"
                                       class="btn btn-outline-primary btn-lg">
                                        <i class="fas fa-download"></i>
                                        Download Template
                                    </a>
                                </div>
                                <div>
                                    <a href="@Url.Action("getall", "Persons")"
                                       class="btn btn-secondary">
                                        <i class="fas fa-arrow-left"></i>
                                        Back to List
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Upload Form -->
                    <div class="row">
                        <div class="col-md-8">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-file-upload"></i>
                                        Upload Excel File
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <form asp-action="BulkUpload" method="post" enctype="multipart/form-data" id="uploadForm">
                                        @Html.AntiForgeryToken()

                                        <div class="mb-3">
                                            <label for="excelFile" class="form-label">
                                                <i class="fas fa-file-excel"></i>
                                                Select Excel File <span class="text-danger">*</span>
                                            </label>
                                            <input type="file"
                                                   class="form-control"
                                                   id="excelFile"
                                                   name="excelFile"
                                                   accept=".xlsx,.xls"
                                                   required>
                                            <div class="form-text">
                                                <i class="fas fa-info-circle"></i>
                                                Only .xlsx and .xls files are supported. Maximum file size: 10MB
                                            </div>
                                        </div>

                                        <div class="mb-3">
                                            <div class="progress" id="uploadProgress" style="display: none;">
                                                <div class="progress-bar progress-bar-striped progress-bar-animated"
                                                     role="progressbar"
                                                     style="width: 0%">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                            <button type="submit"
                                                    class="btn btn-success btn-lg"
                                                    id="uploadBtn">
                                                <i class="fas fa-upload"></i>
                                                Upload File
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-question-circle"></i>
                                        Help
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <h6><i class="fas fa-exclamation-triangle text-warning"></i> Important Notes:</h6>
                                    <ul class="small">
                                        <li>All email addresses must be unique</li>
                                        <li>National IDs must be unique</li>
                                        <li>Phone numbers must be unique</li>
                                        <li>Use exact names for lookup values</li>
                                        <li>Empty cells will be ignored</li>
                                    </ul>

                                    <h6 class="mt-3"><i class="fas fa-lightbulb text-info"></i> Tips:</h6>
                                    <ul class="small">
                                        <li>Download the template first</li>
                                        <li>Don't modify column headers</li>
                                        <li>Check for duplicate data before upload</li>
                                        <li>Keep file size under 10MB</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // File input change handler
            $('#excelFile').on('change', function() {
                var fileName = $(this)[0].files[0]?.name;
                var fileSize = $(this)[0].files[0]?.size;

                if (fileName) {
                    // Check file size (10MB limit)
                    if (fileSize > 10 * 1024 * 1024) {
                        alert('File size must be less than 10MB');
                        $(this).val('');
                        return;
                    }

                    // Check file extension
                    var allowedExtensions = ['.xlsx', '.xls'];
                    var fileExtension = fileName.toLowerCase().substring(fileName.lastIndexOf('.'));

                    if (!allowedExtensions.includes(fileExtension)) {
                        alert('Please select a valid Excel file (.xlsx or .xls)');
                        $(this).val('');
                        return;
                    }

                    console.log('File selected: ' + fileName);
                }
            });

            // Form submission handler
            $('#uploadForm').on('submit', function(e) {
                var fileInput = $('#excelFile')[0];

                if (!fileInput.files || fileInput.files.length === 0) {
                    e.preventDefault();
                    alert('Please select a file to upload');
                    return;
                }

                // Show progress bar
                $('#uploadProgress').show();
                $('.progress-bar').css('width', '0%');

                // Disable upload button
                $('#uploadBtn').prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Uploading...');

                // Simulate progress (since we can't track actual upload progress easily)
                var progress = 0;
                var progressInterval = setInterval(function() {
                    progress += Math.random() * 15;
                    if (progress >= 90) {
                        clearInterval(progressInterval);
                        progress = 90;
                    }
                    $('.progress-bar').css('width', progress + '%');
                }, 500);

                // The form will submit normally
                setTimeout(function() {
                    clearInterval(progressInterval);
                    $('.progress-bar').css('width', '100%');
                }, 1000);
            });

            // Auto-hide alerts after 5 seconds
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);
        });
    </script>
}