@model CRM.Models.loginVM

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Badya University Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <style>
        body,
        html {
            height: 100%;
            margin: 0;
            background: url('/assets/img/background.jpg') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        img {
            filter: drop-shadow(1px 1px 2px rgba(0, 0, 0, 0.2));
        }

        .login-container {
            max-width: 550px;
            background: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(10px);
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            margin-left: 2rem;
            margin-bottom: 1rem;
        }

        .form-logo {
            background: url('badyalogo') no-repeat center center;
            background-size: contain;
            height: 120px;
            margin-bottom: 1.5rem;
        }
    </style>
</head>
<body>
    <div class="position-absolute start-0 bottom-0" style="margin-left: 3rem; margin-bottom: 3rem;">
        <div class="login-container ms-5 mb-3">
            <div class="form-logo"></div>


            <!-- Image source fo the logo -->
            <div class="text-center mb-4">
                <img src="/assets/img/logo.png" alt="Badya University Logo"
                     style="max-width: 120px; filter: drop-shadow(0 1px 2px rgba(0,0,0,0.2));">
            </div>


            <form asp-action="Login" asp-controller="Auth" method="post">
                <div class="mb-6">
                    <label for="Username" class="form-label">UserName</label>
                    <input name="Username" type="text" class="form-control" id="Username"  required />
                </div>



                <div class="mb-3">
                    <label for="Password" class="form-label">Password</label>
                    <input name="Password" type="Password" class="form-control w-100" id="Password" required />
                </div>
                <br>

                <!-- Optional Info Text for Balance -->
                <div class="form-text text-center mb-3">
                    Please enter your username and password to log in.
                </div>


                @* <div class="form mb-3"> *@
                @*     <input class="form-check-input" type="checkbox" id="termsCheck" required /> *@
                @*     <label class="form-check-label" for="termsCheck"> *@
                @*         Please Enter Your UserName and Password To Login *@
                @*     </label> *@
                @* </div> *@

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
            </form>
        </div>
    </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
